{% extends 'base.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block body %}
    <div class="text-white">
        <div class="flex justify-center">
            <p class="text-5xl">Exercice: {{ exercise.name }}</p>
        </div>
        <div>
            <div class="flex items-center mb-3">
                <i class="fa-solid fa-screwdriver-wrench"></i>&nbsp;
                <p class="text-3xl">Équipement</p>
            </div>
            {% if exercise.equipment | length > 0 %}
                <div class="ml-3 flex">
                    {% for equipment in exercise.equipment %}
                        <div class="border-2 rounded bg-gray-600 ml-3" style="width: 12rem;">
                            <div class="flex items-center justify-center">
                                <img src="/images/placeholder.png" class="card-img-top" alt="equipment-image">
                            </div>
                            <hr>
                            <div class="flex items-center justify-center">
                                <p>
                                    {{ equipment.name }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-xl ml-3"><i class="fa-solid fa-child-reaching"></i> Pas d'équipement nécessaire</p>
            {% endif %}
        </div>
        <div class="mt-3">
            <div class="flex items-center mb-3">
                <i class="fa-solid fa-child"></i>&nbsp;
                <p class="text-3xl">Zone du corps</p>
            </div>
            <div class="ml-3">
                {% for bodyZone in exercise.bodyZone %}
                    <div class="border-2 rounded bg-gray-600" style="width: 12rem;">
                        <div class="flex items-center justify-center">
                            <img src="/images/placeholder.png" class="card-img-top" alt="equipment-image">
                        </div>
                        <hr>
                        <div class="flex items-center justify-center">
                            <h5 class="card-title h5">
                                {{ bodyZone.name }}
                            </h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}