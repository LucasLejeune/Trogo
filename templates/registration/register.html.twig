{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

    <div class="h-full flex items-center justify-center">
        <div class="border border-black rounded mt-3 p-5 translate-middle w-2/5 bg-gradient-to-r from-slate-900 to-slate-700 text-white">
            <div class="flex justify-center">
                <h1 class="mb-3 text-4xl">INSCRIPTION</h1>
            </div>
            {{ form_start(registrationForm) }}
            <div class="flex justify-center">
                <div class="mb-3 w-9/12">
                    <label for="firstName">Prénom</label>
                    <br>
                    {{ form_widget(registrationForm.firstName, {'attr': {'class' : 'rounded w-full'}}) }}
                </div>
            </div>
            <div class="flex justify-center">
                <div class="mb-3 w-9/12">
                    <label for="lastName">Nom</label>
                    <br>
                    {{ form_widget(registrationForm.lastName, {'attr': {'class' : 'rounded w-full'}}) }}
                </div>
            </div>
            <div class="flex justify-center">
                <div class="mb-3 w-9/12">
                    <label for="email">Email</label>
                    <br>
                    {{ form_widget(registrationForm.email, {'attr': {'class' : 'rounded w-full'}}) }}
                </div>
            </div>
            <div class="flex justify-center">
                <div class="mb-3 w-9/12">
                    <label for="plainPassword">Mot de passe</label>
                    <br>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class' : 'rounded w-full'}}) }}
                </div>
            </div>
            <div class="flex justify-center">
                <div class="mb-3 w-9/12">
                    <label for="confirm-password">Confirmer le mot de passe</label>
                    <br>
                    <input type="password" name="_confirm_password" id="confirm-password" class="rounded w-full"
                           autocomplete="current-password" required>
                </div>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="border-2 rounded p-1">S'inscrire</button>
            </div>
            {{ form_errors(registrationForm) }}
            {{ form_end(registrationForm) }}
        <div class="flex items-center justify-center mt-3">
            <p>Vous avez déjà un compte ?</p> &nbsp;
            <a href="{{ path('app_login') }}" class="underline">Se connecter</a>
        </div>
        </div>
    </div>
{% endblock %}
