{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
    <div class="h-full flex items-center justify-center">
        <div class="border border-black rounded mt-3 p-5 h-1/2 translate-middle w-2/5 bg-gradient-to-r from-slate-900 to-slate-700 text-white">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connectés en tant que
                        {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}
                <div class="flex justify-center">
                    <h1 class="mb-3 text-4xl">CONNEXION</h1>
                </div>
                <div class="flex justify-center">
                    <div class="mb-3 w-9/12">
                        <label for="username">Email</label>
                        <br>
                        <input type="email" value="{{ last_username }}" name="_username" id="username"
                               class="rounded w-full"
                               autocomplete="email" required autofocus>
                    </div>
                </div>
                <div class="flex justify-center">
                    <div class="mb-3 w-9/12">
                        <label for="password">Mot de passe</label>
                        <br>
                        <input type="password" name="_password" id="password" class="rounded w-full"
                               autocomplete="current-password" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="flex space-x-4 justify-center items-center mt-3">
                    <a class="underline" href="">Mot de passe oublié ?</a>
                    <button class="border-2 rounded p-1" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
