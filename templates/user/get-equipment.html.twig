{% extends 'base.html.twig' %}

{% block title %}Gérer l'équipement{% endblock %}

{% block body %}
    <div class="text-white">
        {% if userEquipments | length > 0 %}
            <div class="flex justify-center mb-3">
                <p class="text-5xl">Votre équipement</p>
            </div>
            <div class="flex ml-3 justify-center">
                {% for userEquipment in userEquipments %}
                    <div class="border-2 rounded bg-gray-600 ml-3" style="width: 12rem;">
                        <div class="flex items-center justify-center">
                            <img src="/images/placeholder.png" class="card-img-top" alt="equipment-image">
                        </div>
                        <hr>
                        <div class="flex items-center justify-center">
                            <h5 class="card-title h5">
                                {{ userEquipment.name }}
                                <a role="button" class="btn"
                                   href="{{ path('delete_user_equipment', {'user' : user.id, 'equipment': userEquipment.id}) }}">
                                    <i class="fa-solid fa-circle-minus fa-xl"></i>
                                </a>
                            </h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="flex justify-center my-3">
            <p class="text-5xl">Équipement disponible</p>
        </div>
        <div class="flex ml-3 justify-center">
            {% for equipment in equipments %}
                <div class="border-2 rounded bg-gray-600 ml-3" style="width: 12rem;">
                    <div class="flex items-center justify-center">
                        <img src="/images/placeholder.png" class="card-img-top" alt="equipment-image">
                    </div>
                    <hr>
                    <div class="flex items-center justify-center">
                        <h5 class="card-title h5">
                            {{ equipment.name }}
                            <a role="button" class="btn"
                               href="{{ path('add_user_equipment', {'user' : user.id, 'equipment': equipment.id}) }}">
                                <i class="fa-solid fa-circle-plus fa-xl"></i>
                            </a>
                        </h5>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
