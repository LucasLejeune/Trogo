{% extends 'base.html.twig' %}

{% block title %}Mes entra√Ænements{% endblock %}

{% block body %}
    <div>
        <h2 class="h2">Mes entrainements</h2>
        <div class="row">
            {% for workout in workouts %}
                <div class="card col-md-3 mb-3 ms-3" style="width: 18rem;">
                    <img src="/images/placeholder.png" class="card-img-top">
                    <div class="card-body">
                        <hr>
                        <h5 class="card-title h5">
