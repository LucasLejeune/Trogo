{% extends 'base.html.twig' %}

{% block title %}Entrainement{% endblock %}

{% block body %}
    <div class="text-white">
        <div class="flex justify-center">
            <p class="text-5xl">Exercices de l'entrainement : {{ workout.name }}</p>
        </div>
        <div class="ml-3 flex">
            {% for exercise in exercises %}
                <a href="{{ path("show_exercise", {'id': exercise.id}) }}">
                    <div class="border-2 rounded bg-gray-600 m-3" style="width: 12rem;">
                        <div class="flex items-center justify-center">
                            <img src="/images/placeholder.png" alt="equipment-image">
                        </div>
                        <hr>
                        <div class="flex items-center justify-center">
                            {{ exercise.name }}
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

